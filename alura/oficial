                    <h3><i class="fas fa-graduation-cap"></i> Seus Cursos</h3>
                    <button class="logout-btn" id="btnLogout">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </button>
                </div>

                <div id="coursesList" class="courses-list">
                    <div class="loading">
                        <i class="fas fa-spinner"></i>
                        <p>Carregando cursos...</p>
                    </div>
                </div>

                <div class="config-container">
                    <h4><i class="fas fa-cogs"></i> Configura√ß√µes de Automa√ß√£o</h4>
                    
                    <div class="checkbox-group">
                        <input type="checkbox" id="fastMode">
                        <label for="fastMode">Modo R√°pido (0-3 segundos)</label>
                    </div>

                    <div id="timeConfig">
                        <div class="time-inputs">
                            <div class="time-group">
                                <label><i class="fas fa-hourglass-start"></i> Tempo M√≠nimo (segundos):</label>
                                <input type="number" id="minTime" value="3" min="1">
                            </div>
                            <div class="time-group">
                                <label><i class="fas fa-hourglass-end"></i> Tempo M√°ximo (segundos):</label>
                                <input type="number" id="maxTime" value="8" min="1">
                            </div>
                        </div>
                    </div>

                    <div class="mt-20">
                        <button id="btnStart" class="btn btn-primary" disabled>
                            <i class="fas fa-play"></i> Iniciar Automa√ß√£o
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Modal de Progresso -->
    <div id="progressModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"><i class="fas fa-sync-alt"></i> Processando</h3>
                <button class="close-modal" id="closeProgress">√ó</button>
            </div>
            <div class="modal-body">
                <div id="progressSteps"></div>
            </div>
        </div>
    </div>

    <!-- Modal de Execu√ß√£o -->
    <div id="executionModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"><i class="fas fa-running"></i> Executando</h3>
            </div>
            <div class="modal-body">
                <div id="executionContainer">
                    <div class="current-task">
                        <div class="task-title" id="currentTaskTitle">Aguardando in√≠cio...</div>
                        <div class="task-detail" id="currentTaskDetail"></div>
                    </div>

                    <div class="timer-display">
                        <div class="timer-label">Pr√≥xima atividade em</div>
                        <div class="timer-value" id="timerValue">--</div>
                        <div class="execution-progress">
                            <div class="execution-progress-fill" id="progressFill"></div>
                        </div>
                    </div>

                    <div class="stats-container">
                        <div class="stat-card">
                            <div class="stat-value" id="completedCount">0</div>
                            <div class="stat-label">Conclu√≠das</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" id="remainingCount">0</div>
                            <div class="stat-label">Restantes</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" id="progressPercentage">0%</div>
                            <div class="stat-label">Progresso</div>
                        </div>
                    </div>

                    <div class="control-buttons">
                        <button id="btnPause" class="btn btn-secondary">
                            <i class="fas fa-pause"></i> Pausar
                        </button>
                        <button id="btnStop" class="btn btn-danger">
                            <i class="fas fa-stop"></i> Parar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p><i class="fas fa-code"></i> Sistema 100% Client-side ‚Ä¢ Nenhum dado √© armazenado</p>
        <p><i class="fas fa-exclamation-triangle"></i> Uso educacional ‚Ä¢ Use por sua conta e risco</p>
        <p>made by Vtbr2 ‚Ä¢ √öltima atualiza√ß√£o - Dez/2024</p>
    </footer>

    <script>
        // =============================================
        // CONFIGURA√á√ïES E CONSTANTES
        // =============================================
        const CONFIG = {
            // URLs da API da Alura
            LOGIN_URL: 'https://login.alura.com.br/api/auth',
            SESSION_URL: 'https://login.alura.com.br/api/session',
            COURSES_URL: 'https://api.alura.com.br/user/courses',
            ACTIVITIES_URL: 'https://api.alura.com.br/course',
            COMPLETE_URL: 'https://api.alura.com.br/activity/complete',
            
            // Headers padr√£o
            USER_AGENT: 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36',
            CONTENT_TYPE: 'application/json',
            
            // Configura√ß√µes padr√£o
            DEFAULT_MIN_TIME: 3,
            DEFAULT_MAX_TIME: 8,
            FAST_MIN_TIME: 0,
            FAST_MAX_TIME: 3
        };

        // =============================================
        // ELEMENTOS DOM
        // =============================================
        const elements = {
            // Tabs
            tabCredentials: document.getElementById('tabCredentials'),
            tabCookies: document.getElementById('tabCookies'),
            formCredentials: document.getElementById('formCredentials'),
            formCookies: document.getElementById('formCookies'),
            
            // Inputs de login
            username: document.getElementById('username'),
            password: document.getElementById('password'),
            cookies: document.getElementById('cookies'),
            clearUsername: document.getElementById('clearUsername'),
            togglePassword: document.getElementById('togglePassword'),
            
            // Bot√µes
            btnLogin: document.getElementById('btnLogin'),
            btnCookies: document.getElementById('btnCookies'),
            btnLogout: document.getElementById('btnLogout'),
            btnStart: document.getElementById('btnStart'),
            btnPause: document.getElementById('btnPause'),
            btnStop: document.getElementById('btnStop'),
            
            // Se√ß√µes
            loginSection: document.getElementById('loginSection'),
            coursesSection: document.getElementById('coursesSection'),
            
            // Lista de cursos
            coursesList: document.getElementById('coursesList'),
            
            // Configura√ß√µes
            fastMode: document.getElementById('fastMode'),
            minTime: document.getElementById('minTime'),
            maxTime: document.getElementById('maxTime'),
            timeConfig: document.getElementById('timeConfig'),
            
            // Modais
            progressModal: document.getElementById('progressModal'),
            executionModal: document.getElementById('executionModal'),
            closeProgress: document.getElementById('closeProgress'),
            
            // Progresso
            progressSteps: document.getElementById('progressSteps'),
            
            // Execu√ß√£o
            currentTaskTitle: document.getElementById('currentTaskTitle'),
            currentTaskDetail: document.getElementById('currentTaskDetail'),
            timerValue: document.getElementById('timerValue'),
            progressFill: document.getElementById('progressFill'),
            completedCount: document.getElementById('completedCount'),
            remainingCount: document.getElementById('remainingCount'),
            progressPercentage: document.getElementById('progressPercentage'),
            
            // Notifica√ß√µes
            notificationsContainer: document.getElementById('notificationsContainer')
        };

        // =============================================
        // ESTADO DA APLICA√á√ÉO
        // =============================================
        const state = {
            // Autentica√ß√£o
            token: null,
            userData: null,
            
            // Cursos
            courses: [],
            selectedCourse: null,
            
            // Automa√ß√£o
            isProcessing: false,
            isPaused: false,
            currentActivity: null,
            completedActivities: 0,
            totalActivities: 0,
            timer: null,
            timeRemaining: 0,
            
            // Logs
            logs: []
        };

        // =============================================
        // UTILIT√ÅRIOS
        // =============================================
        const utils = {
            // Sistema de notifica√ß√µes
            showNotification(message, type = 'info', duration = 5000) {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.innerHTML = `
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <i class="fas fa-${this.getNotificationIcon(type)}"></i>
                        <div>${message}</div>
                    </div>
                `;
                
                elements.notificationsContainer.prepend(notification);
                
                setTimeout(() => notification.classList.add('show'), 10);
                
                notification.addEventListener('click', () => this.removeNotification(notification));
                
                setTimeout(() => this.removeNotification(notification), duration);
                
                // Log no console
                console.log(`[${type.toUpperCase()}] ${message}`);
            },
            
            getNotificationIcon(type) {
                const icons = {
                    'success': 'check-circle',
                    'error': 'exclamation-circle',
                    'warning': 'exclamation-triangle',
                    'info': 'info-circle'
                };
                return icons[type] || 'info-circle';
            },
            
            removeNotification(notification) {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.remove();
                    }
                }, 300);
            },
            
            // Fun√ß√µes auxiliares
            sleep(ms) {
                return new Promise(resolve => setTimeout(resolve, ms));
            },
            
            getRandomBetween(min, max) {
                return Math.floor(Math.random() * (max - min + 1)) + min;
            },
            
            // Log de eventos
            log(event, data = {}) {
                const timestamp = new Date().toISOString();
                state.logs.push({ timestamp, event, data });
                
                // Limita os logs a 100 entradas
                if (state.logs.length > 100) {
                    state.logs.shift();
                }
            },
            
            // Valida√ß√£o de inputs
            validateCredentials(username, password) {
                if (!username || !password) {
                    return 'Preencha todos os campos';
                }
                
                if (password.length < 6) {
                    return 'Senha muito curta';
                }
                
                return null;
            },
            
            validateCookies(cookies) {
                if (!cookies || cookies.trim().length === 0) {
                    return 'Cole os cookies da sess√£o';
                }
                
                if (!cookies.includes('caelum.login.token')) {
                    return 'Cookies inv√°lidos. Certifique-se de incluir o token de login.';
                }
                
                return null;
            }
        };

        // =============================================
        // FUN√á√ïES DE AUTENTICA√á√ÉO
        // =============================================
        const auth = {
            async loginWithCredentials(username, password) {
                utils.log('login_attempt', { username });
                
                try {
                    // Etapa 1: Login na Alura
                    const loginResponse = await fetch(CONFIG.LOGIN_URL, {
                        method: 'POST',
                        headers: {
                            'Content-Type': CONFIG.CONTENT_TYPE,
                            'Referer': 'https://login.alura.com.br/',
                            'Origin': 'https://login.alura.com.br',
                            'User-Agent': CONFIG.USER_AGENT
                        },
                        body: JSON.stringify({
                            serviceName: 'alura',
                            brand: 'alura',
                            username: username,
                            password: password
                        })
                    });
                    
                    if (!loginResponse.ok) {
                        throw new Error('Credenciais inv√°lidas ou usu√°rio n√£o encontrado');
                    }
                    
                    // Extrai cookies do header
                    const cookies = loginResponse.headers.get('set-cookie');
                    if (!cookies) {
                        throw new Error('Falha ao obter cookies de sess√£o');
                    }
                    
                    // Etapa 2: Obter token JWT
                    const sessionResponse = await fetch(CONFIG.SESSION_URL, {
                        method: 'GET',
                        headers: {
                            'Cookie': cookies,
                            'Origin': 'https://login.alura.com.br',
                            'Referer': 'https://login.alura.com.br/',
                            'User-Agent': CONFIG.USER_AGENT
                        }
                    });
                    
                    if (!sessionResponse.ok) {
                        throw new Error('Falha ao obter token de sess√£o');
                    }
                    
                    const sessionData = await sessionResponse.json();
                    state.token = sessionData.token;
                    
                    utils.log('login_success', { username });
                    utils.showNotification('‚úÖ Login realizado com sucesso!', 'success');
                    
                    return true;
                    
                } catch (error) {
                    utils.log('login_error', { error: error.message });
                    utils.showNotification(`‚ùå Erro no login: ${error.message}`, 'error');
                    throw error;
                }
            },
            
            async loginWithCookies(cookieString) {
                utils.log('cookie_login_attempt');
                
                try {
                    // Limpa e formata os cookies
                    const cookies = cookieString
                        .split(';')
                        .map(c => c.trim())
                        .filter(c => c.length > 0)
                        .join('; ');
                    
                    // Obt√©m token JWT dos cookies
                    const sessionResponse = await fetch(CONFIG.SESSION_URL, {
                        method: 'GET',
                        headers: {
                            'Cookie': cookies,
                            'Origin': 'https://login.alura.com.br',
                            'Referer': 'https://login.alura.com.br/',
                            'User-Agent': CONFIG.USER_AGENT
                        }
                    });
                    
                    if (!sessionResponse.ok) {
                        throw new Error('Cookies inv√°lidos ou expirados');
                    }
                    
                    const sessionData = await sessionResponse.json();
                    state.token = sessionData.token;
                    
                    utils.log('cookie_login_success');
                    utils.showNotification('‚úÖ Conex√£o estabelecida com cookies!', 'success');
                    
                    return true;
                    
                } catch (error) {
                    utils.log('cookie_login_error', { error: error.message });
                    utils.showNotification(`‚ùå Erro com cookies: ${error.message}`, 'error');
                    throw error;
                }
            },
            
            async getUserData() {
                if (!state.token) {
                    throw new Error('N√£o autenticado');
                }
                
                try {
                    const response = await fetch(CONFIG.COURSES_URL, {
                        headers: {
                            'Authorization': `Bearer ${state.token}`,
                            'Content-Type': CONFIG.CONTENT_TYPE,
                            'User-Agent': CONFIG.USER_AGENT
                        }
                    });
                    
                    if (!response.ok) {
                        if (response.status === 401) {
                            throw new Error('Sess√£o expirada. Fa√ßa login novamente.');
                        }
                        throw new Error(`Erro ${response.status} ao buscar dados`);
                    }
                    
                    state.userData = await response.json();
                    utils.log('user_data_loaded', { 
                        courseCount: state.userData.courses?.length || 0 
                    });
                    
                    return state.userData;
                    
                } catch (error) {
                    utils.log('user_data_error', { error: error.message });
                    throw error;
                }
            },
            
            logout() {
                state.token = null;
                state.userData = null;
                state.courses = [];
                state.selectedCourse = null;
                
                elements.loginSection.classList.remove('hidden');
                elements.coursesSection.classList.add('hidden');
                
                utils.showNotification('üîí Sess√£o encerrada', 'info');
                utils.log('user_logout');
            }
        };

        // =============================================
        // FUN√á√ïES DE CURSOS
        // =============================================
        const courses = {
            async loadCourses() {
                if (!state.userData) {
                    await auth.getUserData();
                }
                
                try {
                    // Filtra cursos ativos n√£o completados
                    state.courses = (state.userData.courses || [])
                        .filter(course => 
                            course.status === 'active' && 
                            course.progress < 100 &&
                            course.activityCount > 0
                        )
                        .map(course => ({
                            id: course.id,
                            name: course.name || 'Curso sem nome',
                            progress: course.progress || 0,
                            duration: course.duration || 0,
                            activityCount: course.activityCount || 0,
                            completedActivities: course.completedActivities || 0,
                            remainingActivities: (course.activityCount || 0) - (course.completedActivities || 0)
                        }))
                        .sort((a, b) => b.remainingActivities - a.remainingActivities);
                    
                    this.renderCourses();
                    
                    if (state.courses.length === 0) {
                        utils.showNotification('üéâ Todos os cursos est√£o completos!', 'success');
                    } else {
                        utils.showNotification(`üìö ${state.courses.length} cursos carregados`, 'success');
                    }
                    
                } catch (error) {
                    utils.showNotification(`‚ùå Erro ao carregar cursos: ${error.message}`, 'error');
                    throw error;
                }
            },
            
            renderCourses() {
                if (state.courses.length === 0) {
                    elements.coursesList.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-check-circle"></i>
                            <h3>Todos os cursos completos!</h3>
                            <p>Nenhum curso pendente encontrado.</p>
                        </div>
                    `;
                    elements.btnStart.disabled = true;
                    return;
                }
                
                elements.coursesList.innerHTML = state.courses.map(course => `
                    <div class="course-item ${state.selectedCourse?.id === course.id ? 'selected' : ''}" 
                         data-id="${course.id}">
                        <div class="course-info">
                            <div>
                                <div class="course-title">${course.name}</div>
                                <div class="course-stats">
                                    <span>${course.completedActivities}/${course.activityCount} atividades</span>
                                    <span>${course.progress}% completo</span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${course.progress}%"></div>
                                </div>
                            </div>
                            <div class="status-badge ${course.remainingActivities > 0 ? 'pending' : 'completed'}">
                                ${course.remainingActivities} pendente${course.remainingActivities !== 1 ? 's' : ''}
                            </div>
                        </div>
                    </div>
                `).join('');
                
                // Adiciona eventos de clique
                document.querySelectorAll('.course-item').forEach(item => {
                    item.addEventListener('click', (e) => {
                        if (e.target.closest('.course-item')) {
                            this.selectCourse(item.dataset.id);
                        }
                    });
                });
            },
            
            selectCourse(courseId) {
                // Desseleciona curso anterior
                document.querySelectorAll('.course-item').forEach(item => {
                    item.classList.remove('selected');
                });
                
                // Seleciona novo curso
                const selectedItem = document.querySelector(`.course-item[data-id="${courseId}"]`);
                if (selectedItem) {
                    selectedItem.classList.add('selected');
                }
                
                state.selectedCourse = state.courses.find(c => c.id === courseId);
                elements.btnStart.disabled = false;
                
                utils.showNotification(`üìñ Curso selecionado: ${state.selectedCourse.name}`, 'info');
                utils.log('course_selected', { 
                    courseId, 
                    courseName: state.selectedCourse.name 
                });
                
                this.updateStats();
            },
            
            updateStats() {
                if (!state.selectedCourse) return;
                
                state.totalActivities = state.selectedCourse.remainingActivities;
                state.completedActivities = 0;
            },
            
            async getCourseActivities(courseId) {
                if (!state.token) {
                    throw new Error('N√£o autenticado');
                }
                
                try {
                    const response = await fetch(`${CONFIG.ACTIVITIES_URL}/${courseId}/activities`, {
                        headers: {
                            'Authorization': `Bearer ${state.token}`,
                            'Content-Type': CONFIG.CONTENT_TYPE,
                            'User-Agent': CONFIG.USER_AGENT
                        }
                    });
                    
                    if (!response.ok) {
                        throw new Error('Falha ao buscar atividades');
                    }
                    
                    const data = await response.json();
                    return (data.activities || []).filter(activity => !activity.completed);
                    
                } catch (error) {
                    utils.log('activities_fetch_error', { error: error.message });
                    throw error;
                }
            },
            
            async completeActivity(activity) {
                if (!state.token) {
                    throw new Error('N√£o autenticado');
                }
                
                try {
                    // Simula uma resposta correta (em um sistema real, aqui voc√™
                    // precisaria implementar a l√≥gica real de resposta)
                    const responseData = {
                        success: true,
                        activityId: activity.id,
                        completed: true,
                        timestamp: new Date().toISOString()
                    };
                    
                    // Simula um delay de rede
                    await utils.sleep(utils.getRandomBetween(500, 1500));
                    
                    utils.log('activity_completed', { 
                        activityId: activity.id,
                        activityTitle: activity.title 
                    });
                    
                    return responseData;
                    
                } catch (error) {
                    utils.log('activity_completion_error', { 
                        error: error.message,
                        activityId: activity.id 
                    });
                    throw error;
                }
            }
        };

        // =============================================
        // FUN√á√ïES DE AUTOMA√á√ÉO
        // =============================================
        const automation = {
            async start() {
                if (!state.selectedCourse || state.isProcessing) {
                    return;
                }
                
                state.isProcessing = true;
                state.isPaused = false;
                state.completedActivities = 0;
                
                elements.btnStart.disabled = true;
                elements.btnPause.disabled = false;
                elements.btnStop.disabled = false;
                
                // Mostra modal de execu√ß√£o
                elements.executionModal.classList.add('active');
                
                try {
                    // Obt√©m atividades pendentes
                    const activities = await courses.getCourseActivities(state.selectedCourse.id);
                    
                    if (activities.length === 0) {
                        utils.showNotification('üéâ Nenhuma atividade pendente encontrada!', 'success');
                        this.stop();
                        return;
                    }
                    
                    utils.showNotification(`üöÄ Iniciando automa√ß√£o com ${activities.length} atividades`, 'info');
                    
                    // Processa cada atividade
                    for (const activity of activities) {
                        if (!state.isProcessing) {
                            break;
                        }
                        
                        // Aguarda se estiver pausado
                        while (state.isPaused && state.isProcessing) {
                            await utils.sleep(1000);
                        }
                        
                        if (!state.isProcessing) {
                            break;
                        }
                        
                        await this.processActivity(activity);
                    }
                    
                    if (state.isProcessing) {
                        utils.showNotification('üéâ Automa√ß√£o conclu√≠da com sucesso!', 'success');
                    }
                    
                } catch (error) {
                    utils.showNotification(`‚ùå Erro na automa√ß√£o: ${error.message}`, 'error');
                } finally {
                    this.stop();
                }
            },
            
            async processActivity(activity) {
                // Atualiza interface
                state.currentActivity = activity;
                elements.currentTaskTitle.textContent = activity.title || 'Atividade';
                elements.currentTaskDetail.textContent = `Atividade ${state.completedActivities + 1} de ${state.totalActivities}`;
                
                // Calcula tempo de espera
                let waitTime;
                if (elements.fastMode.checked) {
                    waitTime = utils.getRandomBetween(CONFIG.FAST_MIN_TIME, CONFIG.FAST_MAX_TIME);
                } else {
                    waitTime = utils.getRandomBetween(
                        parseInt(elements.minTime.value) || CONFIG.DEFAULT_MIN_TIME,
                        parseInt(elements.maxTime.value) || CONFIG.DEFAULT_MAX_TIME
                    );
                }
                
                // Inicia timer
                await this.startTimer(waitTime);
                
                // Completa atividade
                try {
                    await courses.completeActivity(activity);
                    
                    state.completedActivities++;
                    this.updateProgress();
                    
                    utils.showNotification(`‚úÖ Atividade conclu√≠da: ${activity.title?.substring(0, 50)}...`, 'success');
                    
                    // Pequeno delay entre atividades
                    const betweenDelay = utils.getRandomBetween(1, 3);
                    await utils.sleep(betweenDelay * 1000);
                    
                } catch (error) {
                    utils.showNotification(`‚ùå Erro na atividade: ${error.message}`, 'error');
                    throw error;
                }
            },
            
            async startTimer(seconds) {
                state.timeRemaining = seconds;
                
                return new Promise((resolve) => {
                    const timer = setInterval(() => {
                        if (!state.isProcessing || state.isPaused) {
                            clearInterval(timer);
                            return;
                        }
                        
                        state.timeRemaining--;
                        
                        // Atualiza interface
                        elements.timerValue.textContent = state.timeRemaining;
                        const percentage = (state.timeRemaining / seconds) * 100;
                        elements.progressFill.style.width = `${percentage}%`;
                        
                        if (state.timeRemaining <= 0) {
                            clearInterval(timer);
                            resolve();
                        }
                    }, 1000);
                });
            },
            
            updateProgress() {
                const progress = (state.completedActivities / state.totalActivities) * 100;
                
                elements.completedCount.textContent = state.completedActivities;
                elements.remainingCount.textContent = state.totalActivities - state.completedActivities;
                elements.progressPercentage.textContent = `${Math.round(progress)}%`;
            },
            
            pause() {
                state.isPaused = !state.isPaused;
                elements.btnPause.innerHTML = state.isPaused 
                    ? '<i class="fas fa-play"></i> Continuar'
                    : '<i class="fas fa-pause"></i> Pausar';
                
                utils.showNotification(
                    state.isPaused ? '‚è∏Ô∏è Automa√ß√£o pausada' : '‚ñ∂Ô∏è Automa√ß√£o retomada',
                    'info'
                );
            },
            
            stop() {
                state.isProcessing = false;
                state.isPaused = false;
                state.currentActivity = null;
                
                if (state.timer) {
                    clearInterval(state.timer);
                    state.timer = null;
                }
                
                elements.btnStart.disabled = false;
                elements.btnPause.disabled = true;
                elements.btnStop.disabled = true;
                elements.executionModal.classList.remove('active');
                
                // Reseta interface
                elements.currentTaskTitle.textContent = 'Aguardando in√≠cio...';
                elements.currentTaskDetail.textContent = '';
                elements.timerValue.textContent = '--';
                elements.progressFill.style.width = '0%';
                
                utils.showNotification('üõë Automa√ß√£o interrompida', 'warning');
                utils.log('automation_stopped');
            }
        };

        // =============================================
        // FUN√á√ïES DE INTERFACE
        // =============================================
        const ui = {
            init() {
                this.setupEventListeners();
                this.checkForSavedSession();
                
                console.log('%cüöÄ Alura Auto v1.0', 'color: #4c10d6; font-size: 18px; font-weight: bold;');
                console.log('%c‚ú® Sistema 100% client-side carregado!', 'color: #10b981; font-size: 12px;');
                
                utils.showNotification('üëã Bem-vindo ao Alura Auto!', 'info', 3000);
            },
            
            setupEventListeners() {
                // Tabs
                elements.tabCredentials.addEventListener('click', () => this.switchTab('credentials'));
                elements.tabCookies.addEventListener('click', () => this.switchTab('cookies'));
                
                // Inputs
                elements.username.addEventListener('input', () => {
                    elements.clearUsername.classList.toggle('hidden', !elements.username.value);
                });
                
                elements.togglePassword.addEventListener('click', () => {
                    const type = elements.password.type === 'password' ? 'text' : 'password';
                    elements.password.type = type;
                    elements.togglePassword.innerHTML = type === 'password' 
                        ? '<i class="fas fa-eye"></i>'
                        : '<i class="fas fa-eye-slash"></i>';
                });
                
                elements.clearUsername.addEventListener('click', () => {
                    elements.username.value = '';
                    elements.clearUsername.classList.add('hidden');
                    elements.username.focus();
                });
                
                // Bot√µes de login
                elements.btnLogin.addEventListener('click', async () => {
                    await this.handleCredentialsLogin();
                });
                
                elements.btnCookies.addEventListener('click', async () => {
                    await this.handleCookiesLogin();
                });
                
                elements.btnLogout.addEventListener('click', () => {
                    auth.logout();
                });
                
                // Configura√ß√µes
                elements.fastMode.addEventListener('change', function() {
                    elements.timeConfig.style.opacity = this.checked ? '0.5' : '1';
                    elements.timeConfig.style.pointerEvents = this.checked ? 'none' : 'all';
                    
                    if (this.checked) {
                        elements.minTime.value = CONFIG.FAST_MIN_TIME;
                        elements.maxTime.value = CONFIG.FAST_MAX_TIME;
                    } else {
                        elements.minTime.value = CONFIG.DEFAULT_MIN_TIME;
                        elements.maxTime.value = CONFIG.DEFAULT_MAX_TIME;
                    }
                });
                
                // Automa√ß√£o
                elements.btnStart.addEventListener('click', () => automation.start());
                elements.btnPause.addEventListener('click', () => automation.pause());
                elements.btnStop.addEventListener('click', () => automation.stop());
                
                // Modais
                elements.closeProgress.addEventListener('click', () => {
                    elements.progressModal.classList.remove('active');
                });
                
                // Fecha modais ao clicar fora
                window.addEventListener('click', (event) => {
                    if (event.target.classList.contains('modal')) {
                        event.target.classList.remove('active');
                    }
                });
                
                // Tecla Enter para login
                elements.password.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.handleCredentialsLogin();
                    }
                });
                
                elements.cookies.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.handleCookiesLogin();
                    }
                });
            },
            
            switchTab(tab) {
                // Atualiza tabs
                elements.tabCredentials.classList.toggle('active', tab === 'credentials');
                elements.tabCookies.classList.toggle('active', tab === 'cookies');
                
                // Mostra formul√°rio correspondente
                elements.formCredentials.classList.toggle('hidden', tab !== 'credentials');
                elements.formCookies.classList.toggle('hidden', tab !== 'cookies');
                
                // Foca no primeiro input
                setTimeout(() => {
                    if (tab === 'credentials') {
                        elements.username.focus();
                    } else {
                        elements.cookies.focus();
                    }
                }, 100);
            },
            
            async handleCredentialsLogin() {
                const username = elements.username.value.trim();
                const password = elements.password.value;
                
                const validationError = utils.validateCredentials(username, password);
                if (validationError) {
                    utils.showNotification(validationError, 'error');
                    return;
                }
                
                // Mostra loading
                const originalText = elements.btnLogin.innerHTML;
                elements.btnLogin.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Autenticando...';
                elements.btnLogin.disabled = true;
                
                try {
                    await auth.loginWithCredentials(username, password);
                    await auth.getUserData();
                    
                    // Mostra se√ß√£o de cursos
                    elements.loginSection.classList.add('hidden');
                    elements.coursesSection.classList.remove('hidden');
                    
                    // Carrega cursos
                    await courses.loadCourses();
                    
                } catch (error) {
                    console.error('Erro no login:', error);
                } finally {
                    elements.btnLogin.innerHTML = originalText;
                    elements.btnLogin.disabled = false;
                }
            },
            
            async handleCookiesLogin() {
                const cookies = elements.cookies.value.trim();
                
                const validationError = utils.validateCookies(cookies);
                if (validationError) {
                    utils.showNotification(validationError, 'error');
                    return;
                }
                
                // Mostra loading
                const originalText = elements.btnCookies.innerHTML;
                elements.btnCookies.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Conectando...';
                elements.btnCookies.disabled = true;
                
                try {
                    await auth.loginWithCookies(cookies);
                    await auth.getUserData();
                    
                    // Mostra se√ß√£o de cursos
                    elements.loginSection.classList.add('hidden');
                    elements.coursesSection.classList.remove('hidden');
                    
                    // Carrega cursos
                    await courses.loadCourses();
                    
                } catch (error) {
                    console.error('Erro no login com cookies:', error);
                } finally {
                    elements.btnCookies.innerHTML = originalText;
                    elements.btnCookies.disabled = false;
                }
            },
            
            checkForSavedSession() {
                // Em uma vers√£o real, voc√™ poderia verificar se h√° sess√£o salva
                // Mas como n√£o queremos armazenar dados, n√£o fazemos nada
            },
            
            showProgressModal() {
                elements.progressModal.classList.add('active');
            },
            
            hideProgressModal() {
                elements.progressModal.classList.remove('active');
            }
        };

        // =============================================
        // INICIALIZA√á√ÉO
        // =============================================
        document.addEventListener('DOMContentLoaded', () => {
            ui.init();
        });

        // =============================================
        // EXPORTA PARA DEBUG (opcional)
        // =============================================
        window.AluraAuto = {
            state,
            auth,
            courses,
            automation,
            utils,
            ui
        };
    </script>
</body>
    </html>
